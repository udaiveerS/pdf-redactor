{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "../",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "noEmit": false
    },
    "include": [
        "**/*.ts",
        "../shared/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}