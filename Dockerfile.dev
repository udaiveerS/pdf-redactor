# Development Dockerfile with hot reloading
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./
COPY server/package*.json ./server/

# Install all dependencies (including dev dependencies)
RUN npm ci

# Copy source code
COPY . .

# Expose ports for React dev server and backend
EXPOSE 3000 8080

# Start development server
CMD ["npm", "run", "dev"] 